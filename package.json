{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "name": "lerna-cola-sample",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Sean Matheson <sean@ctrlplusb.com>",
  "license": "MIT",
  "scripts": {
    "clean": "lerna-cola clean",
    "build": "NODE_ENV=production lerna-cola build",
    "develop": "NODE_ENV=development lerna-cola develop",
    "deploy": "NODE_ENV=production lerna-cola deploy"
  },
  "devDependencies": {
    "@lerna-cola/cli": "^0.1.22",
    "@lerna-cola/plugin-deploy-now": "^0.1.22",
    "babel-eslint": "^8.2.5",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.10.0",
    "lerna": "^2.11.0",
    "prettier": "^1.13.5"
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "extends": [
      "eslint-config-airbnb",
      "eslint-config-prettier"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "array-callback-return": 0,
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "camelcase": 0,
      "global-require": 0,
      "no-nested-ternary": 0,
      "no-underscore-dangle": 0,
      "import/no-extraneous-dependencies": 0,
      "import/prefer-default-export": 0,
      "react/forbid-prop-types": 0,
      "react/jsx-indent": 0,
      "react/jsx-filename-extension": 0,
      "react/no-array-index-key": 0,
      "react/no-did-mount-set-state": 0,
      "react/no-find-dom-node": 0,
      "react/sort-comp": 0
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
